extend ../components/template.pug
block  content
    .contentRegistro
        .contentRegistro__box
            .contentRegistro__box__usuario 
                p Usuario
                    .contentRegistro__box__usuario__formulario
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Usuario:
                            input#formGroupExampleInput.form-control(type='text' placeholder='Ingrese Usuario')
                            p Ingrese el nombre de usuario de 8 caracteres con el que podrá iniciar sesión. El nombre de usuario no debe contener solo números.
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Nombre Completo:
                            input#formGroupExampleInput2.form-control(type='text' placeholder='Ingrese su nombre completo')
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Fecha Nacimiento:
                            input#formGroupExampleInput3.form-control(type='date' placeholder='')
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Nacionalidad:
                            input#formGroupExampleInput4.form-control(type='text' placeholder='Ingrese su nacionalidad')
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Domicilio:
                            input#formGroupExampleInput5.form-control(type='text' placeholder='Ingrese su domicilio')
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Telefono:
                            input#formGroupExampleInput6.form-control(type='number' placeholder='Ingrese su telefono a 10 digitos sin espacio')
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Tipo de usuario:
                            select.form-select(aria-label='Tipo de Usuario:')
                                option(selected='') Tipo de Usuario
                                option(value='1') Beneficiario
                                option(value='2') Benefactor 
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Observaciones:
                            textarea#floatingTextarea7.form-control(placeholder='Las observaciones deben contener maximo 180 caracteres' style='height: 100px')
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Password:
                            label.form-label2(for='formGroupExampleInput2') La contraseña debe contener al menos una mayuscula, una minuscula, un caracter especial y un numero. Debe tener entre 8 y 12 caracteres.
                            input#formGroupExampleInput8.form-control(type='password' placeholder='Password asta 12 caracteres')   
                        .mb-3
                            label.form-label(for='formGroupExampleInput2') Confirmar Password:
                            input#formGroupExampleInput9.form-control(type='password' placeholder='Confirmar Password')
                        .boton 
                            button.btn.btn-warning(type='button') Iniciar Sesión
                        .boton-azul
                            button.btn.btn-warning(type='button') Cancelar